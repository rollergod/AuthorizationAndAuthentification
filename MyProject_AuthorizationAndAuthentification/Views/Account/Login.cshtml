
@model LoginModel
@{
	Layout = "_Layout";
}

<div class="back">
	<div class="container">
		<h2 class="text-center">Авторизация</h2>
		<div>
			<form method="post" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
				<div class="text-danger" asp-validation-summary="ModelOnly"></div>

				<div class="reg-form">
					<div class="form-group row">
						<div class="col-5">
							<input class="reg-input" placeholder="Введите логин" type="text" asp-for="Login" />
						</div>
						<span asp-validation-for="Login"></span>
					</div>
					<div class="form-group row">
						<div class="col-5">
							<input class="reg-input" placeholder="Введите пароль" type="password" asp-for="Password"/>
						</div>
						<span asp-validation-for="Password"></span>
					</div>

					<div id="divcaptch"></div>
					<input id="txtcaptcha" type="text" style="display:none" required/>
					<br />

					<div class="form-group row">
						<div class="col-2">
							<input type="submit" value="Войти" class="reg-button"/>
						</div>
					</div>
				</div>
			</form>
		</div>

		<div class="reg-reference">
			<span>Еще не зарегистрированы?</span>
			<a asp-action="Register" asp-controller="Account">Регистрация</a>
		</div>
	</div>

</div>
<script
  src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous"></script>
<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallBack&render=explicit" async defer></script>

<script>
	var onloadCallBack = function() {
		grecaptcha.render("divcaptch",{
			"sitekey" : '6LflBOgeAAAAAOp7StY03bulTvsPz9sdn_8065Db',
			"callback" : function(response){
				$('#txtcaptcha').val('t');
			}
		})
	}
</script>